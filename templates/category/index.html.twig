{% extends 'base.html.twig' %}

{% block title %}Page des catégories
{% endblock %}

{% block body %}
    <script src="https://kit.fontawesome.com/54e9e3700c.js" crossorigin="anonymous"></script>

	<div class="col-lg-8 mx-auto p-5 py-md-5">
		<div class="mt-3 text-center">
			<h1 class="h1 mb-2 display-4" style="color: white">Liste des catégories</h1>
		</div>

		<div class="rg-4 pt-5 table-responsive">
			<table class="table table-striped table-hover text-center">
				<thead class="table-dark">
					<tr>
						<th>Catégorie</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for category in categories %}
						<tr>
							<td>{{ category.name }}</td>
							<td>
								<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">
									<i class="fa-solid fa-pen"></i> Modifier
								</a>
								{{ include('category/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">Il n'y a aucune catégorie !</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('app_category_new') }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Ajouter une catégorie</a>
		</div>

		<div class="g-4 pt-5">
			<div class="col text-center" style="text-align: start;">
				<a href="/" class="btn btn-secondary">
					<i class="fa-solid fa-house"></i>
					Accueil</a>
			</div>
		</div>
	</div>

{% endblock %}

