{% extends 'base.html.twig' %}

{% block title %}
    Mon Équipe
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/css/team.css" rel="stylesheet"/>
{% endblock %}

{% block body %}

    <div class="container-team">
        <h2>Mon Équipe ({{ app.user.getCategory() }})</h2>
        <div class="cards">
            {% set sortedUsers = users|sort((a, b) => a.getFirstName() <=> b.getFirstName()) %}

            {% for user in sortedUsers %}
                {% if app.user is defined and user.getCategory() == app.user.category %}
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><b>{{ user.getFirstName() }}</b></h5>
                            <p class="card-text">Primary Position : {{ user.getPostePrincipal() }}</p>
                            <p class="card-text">Secondary Position : {{ user.getPosteSecondaire() }}</p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
