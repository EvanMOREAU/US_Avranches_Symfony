<title>{% block title %}US Avranches Connexion{% endblock %}</title>
<body class='bg-dark'>
{% block body %}


<!-- Implémentation locale de Boostrap -->
            <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
            <!-- Implémentation distante de Boostrap si la première ne fonctionne pas -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
        <div class="col-md-10 col-lg-5 mx-auto d-flex flex-column justify-content-center vh-100">
            <form class="p-4 p-md-5 border rounded-3 bg-body-tertiary" action="{{ path('app_login') }}" method="post">
                <div class="form-floating mb-3">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input autocomplete="off"  name="_username" type="text" class="form-control" id="floatingInput" placeholder="Nom d'utilisateur" value="{{ last_username }}">
                <label for="floatingInput">Nom d'utilisateur</label>
                </div>
                <div class="form-floating mb-3">
                <input type="password" class="form-control" id="password" placeholder="Mot de passe" name="_password">
                <label for="floatingPassword">Mot de passe</label>
                </div>
                <div class="checkbox mb-3">

                </div>
                <button class="w-100 btn btn-lg btn-success" type="submit">Connexion</button>
                <hr class="my-4">
                <a class="w-100 btn btn-lg btn-danger" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>
            </form>
        </div>
    </div>


    
{% endblock %}
</body>