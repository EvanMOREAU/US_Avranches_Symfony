{# {% extends 'base.html.twig' %} #}

{% block title %}Reset your password{% endblock %}

<body class='bg-dark'>
{% block body %}
            <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
            <!-- Implémentation distante de Boostrap si la première ne fonctionne pas -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
            <script src="/js/redirect.js"></script>
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Reset your password</h1>
    {{ form_start(requestForm) }}
    {{ form_row(requestForm._token) }}
        <div class="row">
            <div class="col-md-10 col-lg-5 mx-auto d-flex flex-column justify-content-center vh-100 ">
                <form class="p-4 p-md-5 border rounded-3 bg-body-tertiary " action="{{ path('app_login') }}" method="post">
                    <div class="form-floating mb-3">
                    <h4 class='text-light text-center'> Adresse mail : </h4>
                    {{ form_row(requestForm.email, { 'attr': { 'class': 'form-control', 'autocomplete': 'off', 'id' : 'floatingInput', 'type' : 'email', 'name' : 'email' } }) }}
                    {# <input autocomplete="off"  name="_username" type="text" class="form-control" id="floatingInput" placeholder="Nom d'utilisateur"> #}
                    {# <label for="floatingInput">Adresse Email</label> #}
                    </div>
                    <button class="w-100 btn btn-lg btn-success" type="submit">Envoyer</button>
                    <hr class="my-4">
                    <small class="text-light text-center">Entrez votre adresse email. Vous recevrez un lien afin de réinitialiser votre mot de passe.</small>
                </form>
            </div>
        </div>
    {{ form_end(requestForm) }}
{% endblock %}
</body>
