                class="icon icon-lg icon-shape bg-gradient-dark shadow-dark text-center border-radius-xl mt-n4 position-absolute">
                <i class="fa-solid fa-futbol"></i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Nombre de tests</p>
                <h4 class="mb-0">{{ testcount }}</h4>
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
              <p class="mb-0"><span class="text-success text-sm font-weight-bolder">+{{addedtest}}</span> test(s) ce
                mois ci</p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-header p-3 pt-2">
              <div
                class="icon icon-lg icon-shape bg-gradient-primary shadow-primary text-center border-radius-xl mt-n4 position-absolute">
                <i class="fa-brands fa-superpowers"></i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Status</p>
                <h4 class="mb-0">
                  {% if "ROLE_SUPER_ADMIN" in app.user.getRoles() %}
                  Développeur
                  {% elseif "ROLE_COACH" in app.user.getRoles() %}
                  Coach
                  {% elseif "ROLE_USER" in app.user.getRoles() %}
                  Joueur
                  {% else %}
                  ERROR
                  {% endif %}
                </h4>
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
              <p class="mb-0"><span class="text-success text-sm font-weight-bolder">{{usercount}}</span> comptes sur
                l'application</p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-header p-3 pt-2">
              <div
                class="icon icon-lg icon-shape bg-gradient-success shadow-success text-center border-radius-xl mt-n4 position-absolute">
                <i class="fa-solid fa-calendar-days"></i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Date du jour</p>
                {% set today = date() %}
                <h4 class="mb-0">{{ today|date('d/m/Y') }}</h4>
                {% set lastDayOfMonth = today|date_modify('last day of this month') %}
                {% set daysRemaining = lastDayOfMonth|date_modify('-' ~ today|date('j') ~ ' day')|date('j') %}
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
              <p class="mb-0"><span class="text-danger text-sm font-weight-bolder">{{ daysRemaining }}</span> jour(s)
                restant(s) avant le mois prochain</p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-sm-6">
          <div class="card">
            <div class="card-header p-3 pt-2">
              <div
                class="icon icon-lg icon-shape bg-gradient-info shadow-info text-center border-radius-xl mt-n4 position-absolute">
                <i class="fa-solid fa-scale-balanced"></i>
              </div>
              <div class="text-end pt-1">
                <p class="text-sm mb-0 text-capitalize">Prochain enregistrement poids/taille</p>
                {% set modifiedDate = weightIn|date_modify('+3 months') %}
                <h4 class="mb-0">{{ modifiedDate|date('d/m/Y') }}</h4>
              </div>
            </div>
            <hr class="dark horizontal my-0">
            <div class="card-footer p-3">
              <p class="mb-0">
                {% set currentDate = "now"|date("Y-m-d") %}
                {% set modifiedDateYmd = modifiedDate|date("Y-m-d") %}
                {% set currentDateYmd = currentDate|date("Y-m-d") %}
                {% set diff = modifiedDateYmd|date_modify("midnight")|date("U") - currentDateYmd|date_modify("midnight")|date("U") %}
                {% set remainingDays = (diff / (24 * 3600))|round %}
                <span class="text-danger text-sm font-weight-bolder">{{ remainingDays }}</span> jour(s) restant(s)
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-4"></div>
